<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.eventracker.fragments.UnauthUserFragment">

    <Button
        android:id="@+id/buttonSignin"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonClearGoogle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="38dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonClearGoogle"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="284dp"
        android:text="Clear Google Login"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_above="@+id/buttonSignin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="50dp"
        android:text="TextView" />

</RelativeLayout>