<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.eventracker.fragments.UnauthUserFragment">

    <Button
        android:id="@+id/buttonSignin"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/signin_button_shape"
        android:fontFamily="@font/open_sans_semibold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="Sign in / Register"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonClearGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSignin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/open_sans_semibold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="Clear Google Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>